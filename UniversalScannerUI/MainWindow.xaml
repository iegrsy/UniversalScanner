<Window
    x:Class="UniversalScannerUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UniversalScannerUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button
            x:Name="scanButton"
            Grid.Row="0"
            Grid.Column="0"
            Width="100"
            Margin="20"
            Padding="10"
            HorizontalAlignment="Left"
            Content="Scan" />

        <Button
            x:Name="aboutButton"
            Grid.Row="0"
            Grid.Column="1"
            Width="100"
            Margin="20"
            Padding="10"
            HorizontalAlignment="Right"
            Content="About" />

        <ListView
            x:Name="lstFoundDevice"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="20" />
    </Grid>
</Window>
